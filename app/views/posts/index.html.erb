<h1>All Posts</h1>


  <% @posts.each do |post| %>
  <%= link_to post.title, post_path(post) %>
  <hr>
  <% end %>

<%= paginate @posts %>


<h3><%= link_to "Create New Post", new_post_path %></h3>

<%= form_tag search_posts_path, :method => "get" do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>
